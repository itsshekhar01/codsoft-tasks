#include <iostream>
using namespace std;
int main() {
 char op;
  long double Number1,Number2;
  cout<<"Enter the operation you want to do (+,-,*,/) : ";
  cin>>op;
  cout<<"Enter the number1 : ";
  cin>>Number1;
  cout<<"Enter the number2 : ";
  cin>>Number2;
  switch  (op)  {
    case '+':
    cout<<Number1<<" + "<<Number2<<" = "<<Number1+Number2;
    break;
    case '-':
    cout<<Number1<<" - "<<Number2<<" = "<<Number1-Number2;
    break;
    case '*':
    cout<<Number1<<" * "<<Number2<<" = "<<Number1*Number2;
    break;
    case '/':
      if(Number2 != 0)
    cout<<Number1<<" / "<<Number2<<" = "<<Number1/Number2;
      else
        cout<<"âˆž";
      break;
    default:
    cout<< op <<" this operator is not valid ";
    }
  return 0;
}
